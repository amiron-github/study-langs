<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Test</th>
    <th>Category</th>
    <th>Title</th>
    <th>Title ru</th>
    <th>Title fr</th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%=h exercise.test_id %></td>
    <td><%=h exercise.category_id %></td>
    <td><%=h exercise.title %></td>
    <td><%=h exercise.title_ru %></td>
    <td><%=h exercise.title_fr %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New exercise', new_exercise_path %>