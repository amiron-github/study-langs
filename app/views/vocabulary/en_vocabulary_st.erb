
<% 

@page_meta = {'description' => "Learn vocabulary topic "+@category_title+" with online flashcards and lexical tests: words with audio samples, quizzes, spell practice"} 

   @has_audio = true 
   @t_template='vocab'
   header = 'Vocabulary'
	voc_url = @lang+'/'+@add_lang+'/'+'vocabulary'

	if @add_lang == "ru" then header = 'Russian vocabulary'; voc_url = 'vocabulary.html' end
	if @add_lang == "fr" then header = 'French vocabulary'; end
	
	@page_title = ' '+@category_title+' :: Online '+header
	
   @enru = false
   if @lang == 'en' && @add_lang == 'ru' then @enru = true end
   if @enru
	@words.each_with_index  do |word, index| 
		word[:flash_text] = word[:html]
		unless cookies[:accents] 
			word[:voc_text] = strip_tags(word.html) 
		else 
			word[:voc_text] = word.html
		end
	end
   else   
	@words.each_with_index  do |word, index| 
		word[:translate] = word[:translate_fr]
		word[:transcribe] = word[:transcribe_fr]
		word[:voc_text] = word[:text]
		word[:flash_text] = word[:text]
	end
   end
%>

