}

.fl-next:hover {
background-color: #BFD6FF;
}

.fl-next-down {
top: 1px;
left: 1px;
-webkit-box-shadow: 0px 1px 2px #555;
}

.fl-check {
background-image: url(/images/transparent-30.png);
padding: 20px;
border: 5px solid #A4BFEF;
-webkit-box-shadow: 1px 2px 4px #555;
}

.fl-verify {
