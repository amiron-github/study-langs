font-weight: bold;
color: #111;
}

.fl-next:hover {
background-color: #BFD6FF;
}

.fl-next-down {
top: 1px;
left: 1px;
-webkit-box-shadow: 0px 1px 2px #555;
}

.fl-check {
background-image: url(/images/transparent-30.png);
