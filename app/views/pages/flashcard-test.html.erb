}
.fl-activity-wrapper {
margin-top: 20px;
}

.fl-learned td {
text-decoration: line-through;
}

.fl-wrong-note {
display: block;
border: 1px solid red;
background-color: #FFCFCF;
font-weight: bold;
color: #555;
}

.fl-correct-note {
