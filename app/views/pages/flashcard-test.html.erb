padding: 3px 10px;
cursor: pointer;
border: 1px solid #8E95AF;
background-image:url(/images/btn-grd.png);
background-position:50%;
background-repeat:no-repeat;
-webkit-box-shadow: 1px 2px 3px #555;
}

.fl-cancel:hover {
background-color: #FF8C2F;
font-weight: bold;
}

.fl-cancel {
width: 60px;
position: absolute;
right: 15px;
top: 0;
}


.fl-cancel-wrapper {
position: relative;
overflow: hidden;
}

.fl-test-task {
padding-right: 110px;
height: 35px;
line-height: 16px;
margin-bottom: 4px;
font-size: 12px;
color: #22456F;
}

.fl-stop:hover {
