		texts: ['Правильно','Неправильно','Далее','Результат','Осталось','Всего вопросов','Правильных ответов','Результат'],
		basic_array: [
		
<% @words.each_with_index  do |word, index| -%>
		['<%= word.html.to_s.gsub(/'/,"’") %> <span style="font-weight: normal">\/<\/span> <%= word.image_url.to_s.gsub(/'/,"’") %>', "<%= word.text.to_s.gsub(/"/,'\"') %>"]<% if index!= @last_item_index -%>,<%end -%>
<%end -%>

		]
		
		} )
