<script type="text/javascript"> 

$(document).ready(function() {
	
var cs_view = "small";	
	
$(".cs_more_btn").click(function() {
	if ( ! $(this).parent().hasClass("cs_bigger") ) {
		showCSDetails($(this));
	} else {
		hideCSDetails($(this));
	}
});	


if (getCookie( 'cs_beginner') ) {
	//showCSAtStart ( $("#for_beginner") )
}

if (getCookie( 'cs_everyday') ) {
	showCSAtStart ( $("#for_everyday") );
}

});

function showCSDetails(jObj) {
	jObj.parent().addClass("cs_bigger");
	jObj.text("Hide details");
	parentContainer = jObj.parent().parent();
	parentContainer.find(".cs_to_show").slideDown(400, function() {
		parentContainer.find("li.cs_to_show").css({display: "list-item"});
		parentContainer.addClass("cs_open")
	});
	
	jObj.blur();
	if (jObj.attr('id') == 'for_beginner') {
			setCookie('cs_beginner', 'open');
	} else {
			setCookie('cs_everyday', 'open');
	}
}




function hideCSDetails(jObj) {
	jObj.parent().removeClass("cs_bigger");
	jObj.text("Read more");
	jObj.parent().parent().find(".cs_to_show").slideUp(400, function() {
		jObj.parent().parent().removeClass("cs_open");
	});
	jObj.blur();
	if ( jObj.attr('id') == 'for_beginner') {
		delCookie('cs_beginner');
	} else {
		delCookie('cs_everyday');
	}
}

function showCSAtStart(jObj) {
	jObj.parent().addClass("cs_bigger");
	jObj.text("Hide details");
	parentContainer = jObj.parent().parent();
	parentContainer.find(".cs_to_show").show();
	parentContainer.find("li.cs_to_show").css({display: "list-item"});
	parentContainer.addClass("cs_open");
	jObj.blur();
}


</script>

<% end %>



