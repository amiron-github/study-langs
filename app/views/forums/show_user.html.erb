<% content_for :special_js_css do %>
<%= stylesheet_link_tag 'user-profile' %>
<%end%>

<div class="forum">

<div class="f-title">
<%= @forum.name  %> Â» <span>Member page</span>
</div>
<br/>
<div class="forum-container">

<%= render :partial => '/forums/f_tabs', :locals => {:active => 0} %> 

<div  class="f-t-lists">
	&nbsp;
</div>
	<div class="ft-user-info">
	<table cellpadding="0" cellspacing="20" width="100%">
		<col width="110"><col width="80"><col>
		<tr valign="top">
			<td rowspan="2">
			<div class="userpic-wrapper">
				<img id="userpic-img" src="<%= userpic_for(@user) %>" width="80">
			</div>
			</td>
			<td class="item-name">Nickname: 
			</td>
			<td style="padding-left: 5px;">
				<% if !@user.name || @user.name == '' %>
					<i style="color: #555">not available</i>
				<%else%>
					<span id="us-username"><%= @user.name %></span>
				<%end%>
			</td>
		</tr>
		<tr valign="top">
			<td class="item-name">User's info: 
			</td>
			<td height="85">
				<div style="max-width: 300px;">
				<% if !@user.setting.desc || @user.setting.desc == '' %>
					<span id="us-username"><i>not available</i></span>
				<%else%>
					<span id="us-username"><%= @user.setting.desc %></span>
				<%end%>
				
				</div>
			</td>
		</tr>
	</table>
	</div>

<div class="ft-tabs-wrapper">
  <div class="ft-tabs">
  <a class="ft-tab-my-topics ft-tab-active" href="javascript:;">Topics (<%=@topics.length %>)</a> | <a class="ft-tab-my-comments" href="javascript:;">Comments (<%=@comments_size %>)</a>
  </div>
</div> 
<div class="forum-wall">
  <div class="ft-tab-content ft-my-topics">
   <div class="ft-user-pages" <% if @topics.length==0%>style="display: none"<%end%>>
	<div class="ft-pages-list">Pages: <span class="ft-page-list"></span></div>
   </div>	
	<%= render :partial => '/forums/topics_list_compact' %>
  </div>
<% @topics = @comments%>
  <div class="ft-tab-content ft-my-posts">
	<div class="ft-user-pages" <% if @topics.length==0%>style="display: none"<%end%>>
	  <div class="ft-pages-note"><%=@comments_size %> comments in <%= @comments.length%> topics </div>
	  <div class="ft-pages-list">Pages: <span class="ft-page-list"></span></div>
    </div>
	<%= render :partial => '/forums/topics_list_compact' %>
 </div>
</div>


<br><br><br><br><br><br>

</div> <!-- forum-container -->
</div> <!-- forum -->