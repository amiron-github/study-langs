
<% content_for :special_js_css do %>

<%= stylesheet_link_tag 'sign-forms' %>

<style type="text/css">


.errorExplanation {
text-align: left;
margin-left: 30px;
margin-right: 30px;
}

.errorExplanation h2 {
color: red;
font-size: 16px;
font-weight: bold;
text-align: center;
margin: 40px 30px 30px;
display: none  !important;
display: block;
}

html>body .errorExplanation h2 {
display: block !important;
}

.errorExplanation li, .errorExplanation p {
font-size: 11px;
color: #666666;
}

.errorExplanation p {
font-weight: bold;
}

.errorExplanation p, .errorExplanation ul {
margin-left: 25px;
}

.errorExplanation ul {
padding-left: 40px;

}

.module-content form {
margin-bottom: 0px;
}

.submit-form {
margin-bottom: 0px;
}

.module div {
zoom: 1;
}

.sound_tip {
z-index: 20000;
}

.sign-in input {
font-size: 19px;
}

</style>

<script type="text/javascript"> 

$(document).ready(function() {


	$(".submit-form input").mouseover(function() {
	$(this).parent().addClass("sign-over");
}).mouseout(function() {
	$(this).parent().removeClass("sign-over");
});

$(".submit-form input").mousedown(function() {
	$(this).css({position: "relative", top: "1px", left: "1px"});
}).mouseup(function() {
	$(this).css({position: "relative", top: "0px", left: "0px"});
});


if ($('#errorExplanation').length > 0) {
		if ($.browser.msie && $.browser.version < 8) {
			//$(".errorExplanation h2").css({display: "block"});
		} else {
		var errMess= $('#errorExplanation h2').html();
		$('#errorExplanation h2').remove();
		$('.sign-notification').find('td:eq(0)').append(errMess);
		setTimeout(function() {
			$('.sign-notification-wrapper').css({opacity: "0"}).slideDown().animate({opacity: "1"});
		}, 400);
		}
}

});

</script>

<% end %>
<div id="mess" class="sound_tip"><i>Tip</i></div>

<div class="module mod-in-log">
<br/>

<div class="sign-head-wrapper">
	<div class="sign-rt">
		<div class="sign-lft">
			<h2 class="page sign-head">
				<span class="sign-up-title  sign-string">Inscription</span>
			</h2>
		</div>
	</div>
</div>



<div class="module-top">
	<div class="module-t-left"></div>
	<div class="module-t-right"></div>
</div>
<div class="module-right">
<div class="module-left">
<div class="module-content">

<% form_for :user, :url => users_path do |f| -%>
	<input type="hidden" name="lang" value="fr">
	<%if params[:to_lang]%><input type="hidden" name="to_lang" value="<%= @to_lang %>"><%end%>


<h2 class="page" style="display: none">Bienvenue!</h2>
		
<p align="center" style="display: none"><a href="login" style="font-size: 11px; font-weight: bold;">Already registered? Click here to sign in</a></p>
			<table align="center" class="sign-options">
				<tr>
					<td>
						<p style="margin-top: 0px;">Si vous disposez déjà d'un compte,  <%= link_to 'identifiez-vous',{:controller => 'sessions', :action => 'new', :lang=>params[:lang], :to_lang=>params[:to_lang]} %></p>

					</td>
				</tr>
			</table>
			
<div class="sign-notification-wrapper" style="display: none;">	
		
<table class="sign-notification" align="center" ><tr><td style="position: relative;">
	<div style="position: relative; text-align:  left;">
				<div class="notif-icon"></div>
	</div>	
&nbsp;
</td></tr></table>	

</div>	

<%= error_messages_for :user %>


<table align="center">
	<tr>
		<td>
		
			<table class="form-entries">
				<tr>
					<td class="entry1" >Adresse e-mail:</td>
					<td onmouseout="hide_info(this)" onmouseover="tooltip(this,'Adresse email')"><%= f.text_field :email %></td>
				</tr>
				<tr>
					<td class="entry1">Mot de passe:</td>
					<td onmouseout="hide_info(this)" onmouseover="tooltip(this,'6 symboles au minimum')"> <%= f.password_field :password %></td>
				</tr>
				<tr>
					<td class="entry1">Confirmez votre<br> mot de passe:</td>
					<td><%= f.password_field :password_confirmation %></td>
				</tr>
			</table>
	<tr>
		<td class="submit-text-btn">
			<p align="center" class="sign-in"><%= submit_tag "S'inscrire" %> </p>
		</td>
	</tr>
</table>		

<% end -%>
		
</div>
</div>
</div>
<div class="module-bottom">
	<div class="module-b-left"></div>
	<div class="module-b-right"></div>
</div>
</div>		
		
		

<br><br><br><br><br><br><br><br><br><br><br><br>
		

<script type="text/javascript">
currentSection="login";
</script>

