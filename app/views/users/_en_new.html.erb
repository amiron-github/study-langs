<style type="text/css">


.errorExplanation {
text-align: left;
margin-left: 30px;
margin-right: 30px;
}

.errorExplanation h2 {
color: red;
font-size: 16px;
font-weight: bold;
text-align: center;
margin: 40px 30px 30px;
display: none  !important;
display: block;
}

html>body .errorExplanation h2 {
display: block !important;
}

.errorExplanation li, .errorExplanation p {
font-size: 11px;
color: #666666;
}

.errorExplanation p {
font-weight: bold;
}

.errorExplanation p, .errorExplanation ul {
margin-left: 25px;
}

.errorExplanation ul {
padding-left: 40px;

}

.module-content form {
margin-bottom: 0px;
}

.submit-form {
margin-bottom: 0px;
}

.module div {
zoom: 1;
}

.sound_tip {
