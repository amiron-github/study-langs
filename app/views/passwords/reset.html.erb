<% if @lang=='ru'%>
<h2>Смена пароля </h2>

<% form_for(:user, :url => { :action => 'update_after_forgetting' }) do |f| %>

  <%= f.error_messages %>

  <p>Введите новый пароль и подтвердите его.</p>

  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= hidden_field_tag :reset_code, params[:reset_code] %>
    <%= f.submit "Submit" %>
  </p>
<% end %>

<%else%>


<h2>Reset your password</h2>

<% form_for(:user, :url => { :action => 'update_after_forgetting' }) do |f| %>

  <%= f.error_messages %>

  <p>Please enter a new password and confirm it.</p>

  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= hidden_field_tag :reset_code, params[:reset_code] %>
    <%= f.submit "Submit" %>
  </p>
<% end %>

<%end%>

<%if @success%>
<p style="color: blue; font-weight: bold;"> New password has been saved </p>
<%end%>
