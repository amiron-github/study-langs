<h1>Editing post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>
    <%= f.hidden_field :topic_id %>
    <%= f.hidden_field :user_id %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>