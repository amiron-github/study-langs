<%if logged_in?%><% unless has_nickname?(current_user)%><script type="text/javascript">$(document).ready(function(){disable_form()});</script><div style="border: 1px solid blue" id="current_user_name"><% form_remote_tag (:url => { :controller=> 'users', :action => 'update_nick' }, :failure => 'alert("Something went wrong!")') do %>		<%= hidden_field_tag :user_id, current_user.id %>		<%= text_field_tag :user_name, current_user.name %>	<%= submit_tag "Update" %><% end %></div><%end%><%end%>