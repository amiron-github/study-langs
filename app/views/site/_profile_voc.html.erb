<% @t_lang %><% @t_lang = defined?(lang) ? lang : "en" %><% @add_lang %><% @add_lang = defined?(addlang) ? addlang : "ru" %><% @special_links  %><% @special_links = defined?(special_links) ? special_links : 0 %><% 				not_found_info = "There is no enough information to display.";		show_details = "Show details";		hide_details = "Hide details";		total = "Total items";		studied = "Studied";		tests_done = "Tests completed";		studied_items = "Studied items:";		review_topic = "Review topic";		flashcards = "Flashcards";		tests = "Tests";		tests_results ="Tests results:";		r_title = "Title";		r_result = "Result";		remove_topic = "Remove this topic";		you_sure = "Sure?"%><% if @t_lang == 'ru' %><% 		not_found_info = "Недостаточно данных";		show_details = "Показать";		hide_details = "Скрыть";		total = "Всего в теме";		studied = "Пройдено";		tests_done = "Тесты";		studied_items = "Пройденные слова и фразы:";		review_topic = "Открыть тему";		flashcards = "Флэш-карты";		tests = "Тесты";		tests_results ="Результаты тестов:";		r_title = "Заголовок";		r_result = "Результаты";		remove_topic = "Удалить тему";		you_sure = "Вы уверены?"%><%end %><% @words_last = @words_statistics.length-1 %>	<div class="myvoc-wrapper">	<% if @words_statistics.length < 1 %><p><b><%= not_found_info %></b></p>	<% if @tlan == 'en' %>	<p><b><a href="/vocabulary.html">Start learning Russian vocabulary</a></b></p>	<% end%><% else %>	<div class="voc-results">	<% @words_statistics.each_with_index do |t, index| %>	<div id="topic_<%= t[:category].tag %>" class="voc-item details-hidden">		<div class="voc-top-topic"><span><%= t[:category].title_ru %></span></div>		<div class="voc-details"><span class="mv-details"><%= show_details %></span><span class="mv-no-details"><%= hide_details %></span></div>		<div class="voc-topic-content">			<div class="voc-quick-info">				<%= studied %>:  <b><%= t[:words].length %></b> <% unless t[:category].id == 102 %>(<%= (t[:words].length.to_f / t[:category].words.length*100).to_i %>%)<%end%>  |				<% unless t[:category].id == 102 %>	<%= total%>:  <b><%= t[:category].words.length %></b> |<%end%>				<% unless t[:category].id == 102 %>	<%= tests_done %>: <b><%= t[:user_tests].length %></b><%end%><br>			</div>		<div class="voc-topic-details">			<div class="voc-details-content">				<h4><%= studied_items %></h4>				<div class="voc-word-list-wrapper">					<table class="voc-words-list" cellpadding="0" cellspacing="0">					<col width="20">					<% t[:words].each do |word| %>						<tr>							<td><%unless word.sound_url == ''%><div class="jp_control" onclick="cJplayer('<%= word.sound_url %>', this)"></div><%end%></td>							<td class="voc-list-original"><%= word.text %></td>							<td><%= word.translate %></td>						</tr>					<% end %>				</table>				</div>				<br><% if @special_links == 0 %><% unless t[:category].id == 102 %>					<a href="/<%= @t_lang %>/<%= @add_lang %>/vocabulary/<%= short_tag(t[:category].tag) %>"><%= review_topic%></a> 	<%end%><%end%>				<% if t[:user_tests].length > 0 %>				<div class="voc-tests">					<h4><%= tests_results %></h4>						<table class="voc-tests-list" cellspacing="1">						<col width="200"><col width="100">					<tr>						<th><%= r_title %></th>						<th align="center"><%= r_result %></th>					</tr>					<% t[:user_tests].each do |user_test| %>					<tr>						<td class="voc-test-title"><%= user_test.exercise.title %></td>						<td class="voc-test-result"><%= (user_test.correct.to_f / user_test.total.to_f * 100).to_i %>%</td>					</tr>					<% end %>					</table>				</div>				<% end %>						<div class="voc-remove-topic" align="center">				<% form_remote_tag(:url => {:controller => 'users', :action =>'delete_topic_words_and_tests', :topic => t[:category].id},														:confirm=> you_sure ) do %>						<%= submit_tag remove_topic %>				<% end %>				</div>			</div><!-- end of voc-details-content -->		</div>		</div>	</div><% end %></div><%end%></div><!-- end of myvoc-wrapper -->	